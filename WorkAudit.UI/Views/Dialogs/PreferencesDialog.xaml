<Window x:Class="WorkAudit.UI.Views.Dialogs.PreferencesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences"
        Width="500"
        Height="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Base directory" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBox Text="{Binding BaseDir, UpdateSourceTrigger=PropertyChanged}" Width="300" Margin="0,0,8,0" />
                            <Button Content="Browse..." Command="{Binding BrowseBaseDirCommand}" Width="80" />
                        </StackPanel>

                        <TextBlock Text="OCR language" FontWeight="SemiBold" Margin="0,0,0,4" />
                        <ComboBox ItemsSource="{Binding OcrLangOptions}" SelectedItem="{Binding OcrLang}" Width="200" HorizontalAlignment="Left" Margin="0,0,0,16" />
                        <CheckBox Content="Search panel visible" IsChecked="{Binding SearchPanelVisible}" Margin="0,0,0,16" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Appearance">
                <StackPanel Margin="16">
                    <TextBlock Text="Theme" FontWeight="SemiBold" Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding ThemeOptions}" SelectedItem="{Binding Theme}" Width="200" HorizontalAlignment="Left" Margin="0,0,0,16" />

                    <TextBlock Text="Language" FontWeight="SemiBold" Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding LanguageOptions}" SelectedItem="{Binding Language}" Width="200" HorizontalAlignment="Left" Margin="0,0,0,16" />
                </StackPanel>
            </TabItem>

            <TabItem Header="Performance">
                <StackPanel Margin="16">
                    <TextBlock Text="Performance settings (placeholder)" Foreground="Gray" />
                </StackPanel>
            </TabItem>

            <TabItem Header="Advanced">
                <StackPanel Margin="16">
                    <TextBlock Text="Advanced settings (placeholder)" Foreground="Gray" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True" Width="80" Margin="0,0,8,0" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True" Width="80" />
        </StackPanel>
    </Grid>
</Window>
