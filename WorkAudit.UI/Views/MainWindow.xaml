<Window x:Class="WorkAudit.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WorkAudit.UI.ViewModels"
        xmlns:controls="clr-namespace:WorkAudit.UI.Views.Controls"
        mc:Ignorable="d"
        Title="WorkAudit"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.InputBindings>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleSidebarCommand}" />
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding TogglePropertiesDockCommand}" />
        <KeyBinding Key="OemComma" Modifiers="Ctrl" Command="{Binding OpenPreferencesCommand}" />
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}" />
        <KeyBinding Key="N" Modifiers="Ctrl+Shift" Command="{Binding SaveNotesCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Menu bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="File" />
            <MenuItem Header="Edit" />
            <MenuItem Header="View">
                <MenuItem Header="Tools" Command="{Binding NavigateToToolsCommand}" />
                <MenuItem Header="Reports" Command="{Binding NavigateToReportsCommand}" />
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Developer">
                    <MenuItem Header="Seed sample documents" Command="{Binding SeedDocumentsCommand}" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help" />
        </Menu>

        <!-- Header row -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <Button Content="â‰¡" Width="32" Height="28" Margin="0,0,8,0" ToolTip="Hamburger" />
                <Button Content="||" Width="32" Height="28" Command="{Binding ToggleSidebarCommand}" ToolTip="Toggle sidebar (Ctrl+B)" />
            </StackPanel>
        </Border>

        <!-- Main content: activity bar + content area + properties dock -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar / Activity bar -->
            <Border Grid.Column="0" Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    BorderBrush="LightGray" BorderThickness="0,0,1,0">
                <StackPanel Orientation="Vertical" MinWidth="80" Margin="4">
                    <Button Content="Webcam" Command="{Binding NavigateToWebcamCommand}" Margin="0,4" Padding="4,8" />
                    <Button Content="Import" Command="{Binding NavigateToImportCommand}" Margin="0,4" Padding="4,8" />
                    <Button Content="Search" Command="{Binding NavigateToSearchCommand}" Margin="0,4" Padding="4,8" />
                    <Button Content="Workspace" Command="{Binding NavigateToWorkspaceCommand}" Margin="0,4" Padding="4,8" />
                </StackPanel>
            </Border>

            <!-- Content area -->
            <Border Grid.Column="1" Margin="8" Padding="8">
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Border>

            <!-- Properties dock -->
            <Border Grid.Column="2" Visibility="{Binding IsPropertiesDockVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    BorderBrush="LightGray" BorderThickness="1,0,0,0" Width="200">
                <controls:PropertiesDock />
            </Border>
        </Grid>
    </Grid>
</Window>
