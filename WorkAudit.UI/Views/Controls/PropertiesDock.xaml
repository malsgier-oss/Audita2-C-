<UserControl x:Class="WorkAudit.UI.Views.Controls.PropertiesDock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock x:Name="Placeholder" Text="Select a document" Margin="8" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <StackPanel x:Name="ContentPanel" Visibility="Collapsed" Margin="8">
            <TextBlock Text="Properties" FontWeight="SemiBold" Margin="0,0,0,8" />
            <TextBlock x:Name="IdText" Margin="0,2" />
            <TextBlock x:Name="TypeText" Margin="0,2" />
            <TextBlock x:Name="StatusText" Margin="0,2" />
            <TextBlock x:Name="SectionText" Margin="0,2" />
            <TextBlock x:Name="PathText" Margin="0,2" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
