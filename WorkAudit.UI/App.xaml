<Application x:Class="WorkAudit.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WorkAudit.UI.ViewModels"
             xmlns:views="clr-namespace:WorkAudit.UI.Views.Pages"
             xmlns:converters="clr-namespace:WorkAudit.UI.Converters"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter" />
            <DataTemplate DataType="{x:Type vm:WebcamPageViewModel}">
                <views:WebcamPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ImportPageViewModel}">
                <views:ImportPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SearchPageViewModel}">
                <views:SearchPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:WorkspacePageViewModel}">
                <views:WorkspacePage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ToolsPageViewModel}">
                <views:ToolsPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ReportsPageViewModel}">
                <views:ReportsPage />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
